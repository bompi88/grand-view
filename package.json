{
  "name": "GrandView",
  "productName": "GrandView",
  "description": "Helps you structure a large set of information units. Can be used as a tool to plan and gather resources for reports/theses and so on.",
  "version": "0.1.0",
  "company": "Concept NTNU",
  "author": {
    "name": "Bjørn Bråthen"
  },
  "contributors": [
    {
      "name": "Andreas Drivenes"
    }
  ],
  "main": ".index.js",
  "electron_version": "1.2.6",
  "mongo_version": "3.2.0",
  "node_version": "4.4.7",
  "devDependencies": {
    "shelljs": "^0.5.3",
    "colors": "^1.1.2",
    "adm-zip": "^0.4.7",
    "tar": "^2.2.1",
    "gunzip-maybe": "^1.3.1",
    "minimist": "^1.2.0",
    "fs-extra": "^0.30.0",
    "electron-prebuilt": "^1.2.6",
    "electron-rebuild": "^1.1.5",
    "electron-builder": "^5.12.1",
    "electron-packager": "^7.3.0",
    "babel-core": "6.x.x",
    "babel-plugin-react-require": "2.x.x",
    "babel-polyfill": "6.x.x",
    "babel-preset-es2015": "6.x.x",
    "babel-preset-react": "6.x.x",
    "babel-preset-stage-2": "6.x.x",
    "babel-root-slash-import": "^1.1.0",
    "chai": "3.x.x",
    "enzyme": "^2.2.0",
    "eslint": "1.10.x",
    "eslint-plugin-react": "3.15.x",
    "mocha": "2.x.x",
    "react-addons-test-utils": "^15.0.0",
    "sinon": "1.17.x"
  },
  "dependencies": {
    "archiver": "^1.0.0",
    "async": "^1.5.2",
    "domready": "^1.0.8",
    "mantra-core": "^1.7.0",
    "officegen": "^0.2.10",
    "react": "^15.0.0",
    "react-dom": "^15.0.0",
    "react-mounter": "^1.2.0",
    "rimraf": "^2.5.3",
    "string": "^3.3.1",
    "tar-stream": "^1.5.2"
  },
  "scripts": {
    "dev": "node .scripts/run",
    "reset": "meteor reset",
    "dev:setup": "npm install && node .scripts/setup",
    "clean:osx": "node .scripts/clean --platform=darwin --arch=x64",
    "clean:win:x86": "node .scripts/clean --platform=win32 --arch=x86",
    "clean:win:x64": "node .scripts/clean --platform=win32 --arch=x64",
    "clean:linux:x86": "node .scripts/clean --platform=linux --arch=x86",
    "clean:linux:x64": "node .scripts/clean --platform=linux --arch=x64",
    "build:osx": "node .scripts/download --platform=darwin --arch=x64 && node .scripts/prepare --platform=darwin --arch=x64 && node_modules/.bin/build --osx",
    "build:linux:x86": "node .scripts/download --platform=linux --arch=x86 && node .scripts/prepare --platform=linux --arch=x86 && node_modules/.bin/build --linux --ia32",
    "build:linux:x64": "node .scripts/download --platform=linux --arch=x64 && node .scripts/prepare --platform=linux --arch=x64 && node_modules/.bin/build --linux --x64",
    "build:win:x86": "node .scripts/download --platform=win32 --arch=x86 && node .scripts/prepare --platform=win32 --arch=x86 && node_modules/.bin/build --win --ia32",
    "build:win:x64": "node .scripts/download --platform=win32 --arch=x64 && node .scripts/prepare --platform=win32 --arch=x64 && node_modules/.bin/build --linux --x64",
    "lint": "eslint ./lib ./client ./server --ext .js --ext .jsx",
    "lintfix": "npm run lint -- --fix",
    "testonly": "mocha meteor/client/**/tests/**/*.js --compilers js:babel-core/register",
    "test": "npm run lint && npm run testonly",
    "test-watch": "npm run testonly -- --watch --watch-extensions js,jsx"
  },
  "build": {
    "appId": "no.conceptntnu.grandview",
    "app-category-type": "public.app-category.productivity",
    "asar": false,
    "electronVersion": "1.2.6",
    "files": [
      "**\/*",
      "**\/.*"
    ],
    "mac": {
      "icon": ".assets/osx/grandview.icns"
    },
    "dmg": {
      "title": "GrandView",
      "icon": ".assets/osx/grandview.icns",
      "background": ".assets/osx/installer.png",
      "icon-size": 80,
      "contents": [
        {
          "x": 438,
          "y": 344,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 192,
          "y": 344,
          "type": "file"
        }
      ]
    },
    "win": {
      "icon": ".assets/win/grandview.ico"
    },
    "linux": {
      "target": ["deb", "AppImage"]
    }
  },
  "directories": {
    "app": "./.app",
    "output": "./.dist"
  },
  "private": true
}
